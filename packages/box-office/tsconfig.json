{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "esnext",
    "jsx": "react-jsx",
    "paths": {
      "$shared/constants": [
        "./src/_shared/constants/index.ts"
      ],
      "$shared/queries": [
        "./src/_shared/queries/index.ts"
      ],
      "$shared/types": [
        "./src/_shared/types/index.ts"
      ],
      "$shared/utils": [
        "./src/_shared/utils/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules/**",
    "dist"
  ],
}
