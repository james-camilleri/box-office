{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "nodenext",
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "paths": {
      "$shared/constants": [
        "./_shared/constants/index.ts"
      ],
      "$shared/queries": [
        "./_shared/queries/index.ts"
      ],
      "$shared/types": [
        "./_shared/types/index.ts"
      ],
      "$shared/utils": [
        "./_shared/utils/index.ts"
      ]
    }
  },
  "exclude": [
    "../node_modules/**",
  ],
}
